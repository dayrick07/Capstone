{
  "expo": {
    "name": "Safekafe",
    "slug": "Safekafe",
    "owner": "dayrick",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to record videos",
        "NSMicrophoneUsageDescription": "This app needs microphone access to record audio with video",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save videos to your photo library",
        "NSPhotoLibraryUsageDescription": "This app needs access to load videos from your photo library",
        "NSLocationWhenInUseUsageDescription": "This app needs your location to send SOS alerts"
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDDPMJX6hbHbRr4_8FlxfU3v8g-3Jm2pKU"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.alfonsose7.Safekafe",
      "usesCleartextTraffic": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "BODY_SENSORS",
        "MODIFY_AUDIO_SETTINGS",
        "VIBRATE",
        "ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDDPMJX6hbHbRr4_8FlxfU3v8g-3Jm2pKU"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-audio",
      "expo-video",
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.1.20",
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "playServicesMapsVersion": "18.1.0",
            "playServicesLocationVersion": "21.0.1",
            "androidXLegacySupport": true,
            "forceJetify": true,
            "manifestPlaceholders": {
              "appComponentFactory": "tools:replace=\"android:appComponentFactory\""
            },
            "extraGradleArgs": [
              "-Pandroid.enableJetifier=true",
              "-Pandroid.useAndroidX=true"
            ]
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "50ff872c-ae24-47f4-920d-dec2d5802e21"
      }
    }
  }
}
