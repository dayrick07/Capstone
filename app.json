{
  "expo": {
    "name": "Safekafe",
    "slug": "Safekafe",
    "owner": "dayrick07",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to record videos",
        "NSMicrophoneUsageDescription": "This app needs microphone access to record audio with video",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save videos to your photo library",
        "NSPhotoLibraryUsageDescription": "This app needs access to load videos from your photo library"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.alfonsose7.Safekafe",
      "usesCleartextTraffic": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "BODY_SENSORS",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "2e0b68e1-9fd9-4f4c-9926-b35839f12541"
      }
    },
    "plugins": [
      "expo-audio",
      "expo-video",
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.1.20",
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "playServicesMapsVersion": "18.1.0",
            "playServicesLocationVersion": "21.0.1",
            "androidXLegacySupport": true,
            "forceJetify": true,
            "manifestPlaceholders": {
              "appComponentFactory": "tools:replace=\"android:appComponentFactory\""
            },
            "extraGradleArgs": [
              "-Pandroid.enableJetifier=true",
              "-Pandroid.useAndroidX=true"
            ],
            "extraMavenRepos": [
              "allprojects.configurations.all { resolutionStrategy.force 'androidx.core:core:1.16.0' }",
              "allprojects.configurations.all { exclude group: 'com.android.support', module: 'support-compat' }",
              "allprojects.configurations.all { exclude group: 'com.android.support', module: 'versionedparcelable' }"
            ]
          }
        }
      ]
    ]
  }
}
